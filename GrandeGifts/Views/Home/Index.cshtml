@model HomeIndexViewModel

@{
    ViewBag.Title = "Welcome";
}


<!--Slideshow START-->

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/assets/Slideshow-1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/assets/Slideshow-2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/assets/Slideshow-3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!--Slideshow END-->

<div class="container">
    <div class="row">
        <div id="CompanyStatement col-12">
            <h2>About Us</h2>
            <!--(full disclosure) copied pretty much word for word from 'Hampers with Bite'-->
            <p>
                Our humble little company was established in 2018. We haven't been around for long, but we've already taken the gift hamper market by storm!

                We provide a range of hampers and gift baskets which are perfect to reward your staff & workers.
                Our hampers also provide an excellent corporate gift for your most valuable clients.
                We offer you the opportunity to browse our range of expertly designed baskets.
                Grande Gifts really can help with your gift-buying for any occasion!
            </p>

            <h2>Our Commitment</h2>
            <p>
                Our service is second to none; we are confident that you'll be absolutely
                enamoured with any of the fabulous hampers that you purchase from us. If you’re not absolutely
                satisfied with anything that you’ve bought from us, we’ll give you your money back. No questions asked!
            </p>

            <p>
                In time we hope to expand the company into other regions outside of Australia
                and establish a presence worldwide. While we’re at it, we hope to extend our range of products
                and venture into more diverse territory (such as tech, clothing etc.)
                Watch this space!
            </p>
        </div>
    </div>



    <div class="row" id="Top3Cat">
        <div class="col-12 inlineBlock">
            <hr />
            <h2>Top 3 Categories</h2>
            <hr />
            <br />
        </div>
    </div>
    <div class="row content">
        @foreach (var c in Model.Categories)
        {
        <div class="col-lg-3 col-md-6 HamperPolaroid">
            <div class="container">
                <h5>@Html.ActionLink(c.CategoryName, "ViewByCategory", "Hamper", new { CategoryId = c.CategoryId })</h5>
            </div>
            <img src=@c.ImageUrl style="width:100%">
        </div>
        }
    </div>
</div>


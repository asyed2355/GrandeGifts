@model List<ShoppingCartViewViewModel>

@{
    ViewBag.Title = "View Shopping Cart";
}

<div class="headingOneBanner">
    <h1>@ViewBag.Title</h1>
</div>

<div class="container">
    @if (!ViewBag.CartHasItems)
    {
        <h5>Your shopping cart appears to be empty :(</h5>
        <p>Why not @Html.ActionLink("Browse through some of our hampers?", "ViewAll", "Category")</p>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-lg-3 col-md-6 HamperPolaroid">
                <div class="container" id="PolaroidHeading">
                    <h5>@Html.ActionLink(item.HamperName, "ViewDetails", "Hamper", new { HamperId = @item.HamperId })</h5>
                    <p><i>Qty: @item.Quantity</i></p>
                    <p><strong>@item.Price</strong></p>
                </div>
                <img src=@item.ImageUrl id="shoppingCartImage">
                <p><i>@Html.ActionLink("Remove From Cart", "DeleteItem", "ShoppingCart", new { HamperId = @item.HamperId })</i></p>
            </div>
            }
        </div>
        <hr />
        <!--I'm using the address class here because it's a good match:-->
        <div class="row" id="addressDisplay">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 cartGrandTotalBlock">
                <br />
                <h4><strong>Total: $@ViewBag.Total</strong></h4>
                <p><i>($@ViewBag.Subtotal + $7.50 postage and handling)</i></p>
                <hr />
                <button class="form-button" id="shoppingCartButton">@Html.ActionLink("Proceed To Checkout", "Checkout", "ShoppingCart")</button>
                <br />
                <button class="form-button" id="shoppingCartButton">@Html.ActionLink("Continue Shopping", "ViewAll", "Category")</button>
            </div>
        </div>
    }
</div>
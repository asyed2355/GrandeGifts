@model AddressCustomerAddViewModel
@{
    ViewBag.Title = "Add an address to your profile.";
}

<div class="headingOneBanner">
    <h1>@ViewBag.Title</h1>
</div>

<div class="container">
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="row content">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <div class="form-group">
                <form asp-controller="Address" asp-action="AddCustomer" method="post" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly"></div>
                    <!--Address Type-->
                    <div>
                        <label asp-for="AddressType" class="customLabel">Address Type:</label>
                        <select asp-for="AddressType">
                            <option value="Home" asp-for="AddressType">Home</option>
                            <option value="Work" asp-for="AddressType">Work</option>
                        </select>
                    </div>

                    <!--Street Address-->
                    <div>
                        <label asp-for="StreetAddress" class="customLabel">Street Address:</label>
                        <input asp-for="StreetAddress" class="form-control" id="streetAddress" onchange="codeAddress()"/>
                        <span asp-validation-for="StreetAddress"></span>
                    </div>
                    <!--Suburb-->
                    <div>
                        <label asp-for="Suburb" class="customLabel">Suburb:</label>
                        <input asp-for="Suburb" class="form-control" id="suburb" onchange="codeAddress()" />
                        <span asp-validation-for="Suburb"></span>
                    </div>
                    <!--State-->
                    <div>
                        <label asp-for="State" class="customLabel">State:</label>
                        <input asp-for="State" class="form-control" id="state" onchange="codeAddress()" />
                        <span asp-validation-for="State"></span>
                    </div>
                    <!--Postcode-->
                    <div>
                        <label asp-for="Postcode" class="customLabel">Postcode:</label>
                        <input asp-for="Postcode" class="form-control" />
                        <span asp-validation-for="Postcode"></span>
                    </div>
                    <!--Preferred Shipping Address-->
                    <div>
                        <label asp-for="PreferredShippingAddress" class="customLabel">Is this your preferred shipping address?</label>
                        <input type="checkbox" asp-for="PreferredShippingAddress" class="form-control" />
                        <span asp-validation-for="PreferredShippingAddress"></span>
                    </div>
                    <br />

                    <!--SUBMIT-->
                    <div>
                        <input type="submit" value="Add Address" class="form-button" />
                    </div>
                </form>
            </div>
        </div>

        <!--GOOGLE MAPS-->
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <br />
            <br />
            <div id="map"></div>
            @section scriptsMap{
                <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBscS6G1DoWwRfd7SMUiSeGlvTejMawsaY&callback=initMap" type="text/javascript"></script>
                <script src="~/scripts/GoogleMapService.js"></script>
            }
        </div>
    </div>
</div>
